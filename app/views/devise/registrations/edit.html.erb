<div class="row justify-content-center">
  <div class= "col-md">
    <h4 class="display-4 text-center">Account Settings</h4>
  </div>
</div>
<div class="row justify-content-center">
  <div class= "col-md text-center">
    <p>Change your account information.</p>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row justify-content-center">
    <div class="col-md-4 field form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, class: "form-control", autofocus: true  %>
    </div>
    <div class="col-md-4 field form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 field form-group">
      <%= f.label :badge_number %><br />
      <%= f.text_field :badge_number, class: "form-control" %>
    </div>
    <div class="col-md-4 field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 field form-group">
      <%= f.label "New Password" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder:  "Leave blank for no changes." %>
    </div>
    <div class="col-md-4 field form-group">
      <%= f.label "Confirm new password" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder:  "#{@minimum_password_length} characters minimum" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 field form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "off", placeholder: "Required to confirm changes" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 actions">
      <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
<% end %>
<div class="row justify-content-center">
  <div class="col-6 mt-5 jumbotron">
      <h4 class="row display-4 justify-content-center">Account Deletion</h4>
      <p class="row justify-content-center px-4">Warning: This cannot be undone. All of your training records and timecards will be irreversibly deleted. 
        <% if current_user.admin? %>
          Please ensure that you are not the only remaining administrator account; If all administrator accounts are deleted, it will be difficult to create new ones.
        <% end %>
      </p>
      <div class="row justify-content-center">
        <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
      </div>
  </div>
</div>
<div class="row justify-content-center">
  <%= link_to "Back", :back, class: "m-5" %>
</div>