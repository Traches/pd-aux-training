<div class="container-fluid">
  <nav class="row navbar navbar-expand-md navbar-dark bg-dark">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="fa fa-shield fa-lg"></i>
      Monroe County
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent"> 
      <% if user_signed_in? %>
        <div class="navbar-nav mr-auto">
          <%= link_to "Training", lessons_path, class: "nav-item nav-link" %>
          <%= link_to "Timecards", timecards_path, class: "nav-item nav-link" %>
          <% if current_user.trainer? %>
            <div class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Administration
              </a>
              <div class="dropdown-menu active" aria-labelledby="navbarDropdown"}>
                <%= link_to "Users", users_path, class: "dropdown-item" %>
                <%= link_to "Timecards", admin_timecards_path, class: "dropdown-item" %>
                <%= link_to "Training", completions_path, class: "dropdown-item" %>
                <%= link_to "Bulletins", bulletins_path, class: "dropdown-item" %>
              </div>
            </div>
          <% end %>
        </div>
        <%= link_to edit_user_registration_path, class: "navbar-text p-2" do %>
          <%= current_user.first_last(40) %>,
          <%= current_user.role.capitalize %>
        <% end %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger mx-1" %> 
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-primary ml-auto" %>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-success mx-1" %>
      <% end %>
    </div>
  </nav>
</div>
