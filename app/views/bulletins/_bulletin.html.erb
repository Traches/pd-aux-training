<div class="card my-2">
  <h5 class="card-header"><%= bulletin.title %></h4>
  <div class="card-body">
    <div class="row">
      <div class="col-10">
        <% if bulletin.user %>
          <h6 class="card-subtitle text-muted mb-3"><%= "Posted by #{bulletin.user.first_last} on #{bulletin.updated_at.strftime("%A, %b %d")}"%></h6>
        <% end %>
        <p class="card-text"><%= render inline: markdown.render(bulletin.body) %></p>
      </div>
      <div class="col-md-2">
      <%= button_to "Edit", edit_bulletin_path(bulletin), class: "btn btn-sm my-1 btn-secondary btn-block", method: :get if policy(bulletin).edit? %>
      <%= button_to "Delete", bulletin_path(bulletin), data: { confirm: "Are you sure you want to delete this bulletin?" }, class: "btn btn-sm my-1 btn-danger btn-block", method: :delete if policy(bulletin).destroy? %>
      </div>
    </div>
  </div>
</div>
