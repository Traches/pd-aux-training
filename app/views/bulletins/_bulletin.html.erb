<div class="card my-2">
  <div class="card-body">
    <h4 class="card-title"><%= bulletin.title %></h4>
    <h6 class="card-subtitle text-muted mb-3"><%= "Posted by #{bulletin.user.first_last} on #{bulletin.updated_at.strftime("%A, %b %d")}"%></h6>
    <p class="card-text"><%= bulletin.body %></p>
    <div class="row justify-content-center">
    <%= button_to "Edit", edit_bulletin_path(bulletin), class: "btn btn-secondary m-3", method: :get if policy(bulletin).edit? %>
    <%= button_to "Delete", bulletin_path(bulletin), class: "btn btn-danger m-3", method: :delete if policy(bulletin).destroy? %>
    </div>
  </div>
</div>
