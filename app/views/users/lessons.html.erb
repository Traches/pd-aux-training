<h4 class="display-4 text-center">Training Records: <%= @user.first_last %></h4>
<h5 class="mt-4">Complete:</h5>
<% if @lessons_complete.any? %>
  <ul>
    <% @lessons_complete.each do |l| %>
      <li><%= link_to l.title, lesson_path(l) %></li>
    <% end %>
  </ul>
<% else %>
  <p>This person hasn't finished any videos yet.</p>
<% end %>
<h5 class="mt-4">Not Complete:</h5>
<% if @lessons_incomplete.any? %>
  <ul>
    <% @lessons_incomplete.each do |l| %>
      <li><%= link_to l.title, lesson_path(l) %></li>
    <% end %>
  </ul>
<% else %>
  <p>This person has completed all training videos.</p>
<% end %>
<hr>
<div class="row">
  <%= link_to "View user details", user_path(@user), class: "mx-auto" %>
</div>
