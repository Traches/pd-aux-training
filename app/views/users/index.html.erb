<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Badge Number</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <% @users.each do |u| %>
   <tr> 
       <td><%= link_to "Show", user_path(u.id) %></td>
       <td><%= link_to"Edit", edit_user_path(u.id) if current_user.admin? %></td>
       <td><%= link_to "View timecards", user_timecards_path(u.id) %></td>
       <td><%= "#{u.first_name} #{u.last_name}" %></td>
       <td><%= u.badge_number %></td>
       <td><%= u.email %></td>
       <td><%= u.role.capitalize %></td>
   </tr>
<% end %>
</table>