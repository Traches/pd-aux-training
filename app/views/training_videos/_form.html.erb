<% if @video.errors.any? %>
  <div class="card-border-danger">
    <div class="card-header bg-danger text-white">
     <%= "#{pluralize(@video.errors.count, "error")} prevented this timecard from being saved: " %>
    </div>
    <ul class="list-group list-group-flush">
      <% @video.errors.full_messages.each do |m| %>
        <li class="list-group-item"><%= "#{m}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <%= form_for @video do |f| %>
   <div class="row justify-content-center">
      <div class = "form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %><br>
      </div>
    </div>
    <div class="row">
      <div class = "form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %><br>
      </div>
    </div>
    <div class="row">
      <div class = "form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: "form-control" %><br>
      </div>
    </div>
    <%= f.submit "Save!", class: "btn btn-success btn-block my-4" %><br>
  <% end %>
</div>