<h4 class="display-4 text-center my-4">Timecards for <%= @timecards.title %></h4>
<div class="row mx-1 form-group justify-content-center">
  <%= form_tag({}, {method: :get, class: "form-inline"})  do %>
    <%= label_tag "Display workdays for " %>
    <%= select_tag(:user_id, options_for_select(@select_options.list, selected= @timecards.selected_user_id ), class: "form-control mb-2 mx-2") %>
    <%= label_tag "From: " %>
    <%= date_field_tag :range_start, value = @timecards.range_start.strftime("%Y-%m-%d"), class: "form-control mb-2 mx-2" %>
    <%= label_tag "Through: "%>
    <%= date_field_tag :range_end, value = @timecards.range_end.strftime("%Y-%m-%d"), class: "form-control mb-2 mx-2" %>
    <%= submit_tag "Go!", class: "btn btn-info mx-auto my-2" %>
  <% end %>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <table class=" table table-hover my-4">
     <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Date</th>
          <th scope="col">Hours</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        <% if @timecards.list.any? %>
          <% @timecards.list.each do |t| %>
            <tr onclick="window.location='<%= timecard_path(t) %>'">
              <td><%= t.user.last_first  %></td>
              <td><%= link_to t.clock_in.strftime("%A, %b %d"), timecard_path(t) %></td>
              <td><%= t.duration_hours %></td>
              <td><%= t.description.truncate(30, omission: "...") %></td>
            </tr>
          <% end %>
        <% else %>
          <tr><td>No timecards found for these dates</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <p class="mx-auto"><strong>Total Time for these days:</strong> <%= @timecards.total_duration %> hours</p>
</div>
