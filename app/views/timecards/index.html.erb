<h4 class="display-3"><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}'s Timecards" %></h1>
<h4><%= link_to "New timecard", new_timecard_path %></h4>

<%= form_tag({}, method: :get)  do %>
  <%= label_tag "Start: " %>
  <%= date_field_tag :start %><br>
  <%= label_tag "End: " %>
  <%= date_field_tag :finish %>
  <%= submit_tag "Select" %>
<% end %>

<table class="table table-hover">
  <tr>
    <th></th>
    <th scope="col">Date</th>
    <th scope="col">Hours</th>
    <th scope="col">Start Time</th>
    <th scope="col">End Time</th>
    <th scope="col">Description</th>
  </tr>

  <% @timecards.list.each do |t| %>
    <tr>
      <td><%= link_to "Show", timecard_path(t.id) %></td>
      <td><%= t.start.strftime("%A, %b %d") %></td>
      <td><%= t.duration %></td>
      <td><%= t.start.strftime("%I:%M %p") %></td>
      <td><%= t.end.strftime("%I:%M %p") %></td>
      <td><%= t.description %></td>
    </tr>
  <% end %>
</table>

<strong>Total Time:</strong> <%= @timecards.total_duration %> hours

