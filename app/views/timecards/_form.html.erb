<% if @timecard.errors.any? %>
  <div class="card-border-danger">
    <div class="card-header bg-danger text-white">
     <%= "#{pluralize(@timecard.errors.count, "error")} prevented this timecard from being saved: " %>
    </div>
    <ul class="list-group list-group-flush">
      <% @timecard.errors.full_messages.each do |m| %>
        <li class="list-group-item"><%= "#{m}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row justify-content-center">
  <%= form_for @timecard do |f| %>
   <div class="row justify-content-center">
      <div class = "form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %><br>
      </div>
    </div>
    <div class="row justify-content-end">
      <div class = "form-group">
        <%= f.label :start %>
        <%= f.datetime_select :start, class: "form-control" %><br>
      </div>
    </div>
    <div class="row justify-content-end">
      <div class = "form-group">
        <%= f.label :end %>
        <%= f.datetime_select :end, class: "form-control" %><br>
      </div>
    </div>
    <%= f.submit "Log it!", class: "btn btn-success btn-block my-4" %><br>
  <% end %>
</div>