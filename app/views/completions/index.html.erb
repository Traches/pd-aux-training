<h4 class="display-4 text-center my-4">Training Overview</h4>
<div class="row justify-content-center">
  <%= button_to "Add new training video", new_lesson_path, class: "btn btn-lg btn-primary", method: :get%>
</div>
<hr>
<h5 class="mt-3">Training records by video:</h5>
<table class="table table-hover">
  <caption>Click a video to see who's completed it.</caption>
  <thead>
    <tr class="row">
      <th class="col-8">Title</th>
      <th class="col-4">Users completed:</th>
    </tr>
  </thead>
  <tbody>
    <% if @lessons.any? %>
      <% @lessons.each do |v| %>
        <tr class="row" onclick="window.location='<%= users_lesson_path(v) %>'">
          <td class="col-8"><%= link_to v.title, users_lesson_path(v) %></td>
          <td class="col-4"><%= v.users.size %></td>
        </tr>
    <% end %>
    <% else %>
      <tr class="row">
        <td>No videos to display.</td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h5 class="mt-5">Training records by user:</h5>
<table class="table table-hover">
  <caption>Click someone to see which videos they've completed.</caption>
  <thead>
    <tr class="row">
      <th class="col-8">Name</th>
      <th class="col-4">Videos completed:</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |u| %>
    <tr class="row" onclick="window.location='<%= lessons_user_path(u) %>'">
      <td class="col-8"><%= link_to u.last_first, lessons_user_path(u) %></td>
      <td class="col-4"><%= u.lessons.size %></td>
    </tr>
  <% end %>
  </tbody>
</table>
