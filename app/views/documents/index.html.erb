<h4 class="display-4 text-center my-4">Document Library</h4>
<div class="row justify-content-center my-3">
  <%= form_tag documents_path, method: :get, class: 'form-inline' do %>
    <%= select_tag :sort_by, options_for_select(@documents.sort_options.keys, @documents.sort_by), class: 'form-control m-1' %>
    <%= text_field_tag :query, @documents.query, class: 'form-control m-1', placeholder: 'Search' %>
    <%= submit_tag "Go", class: 'btn m-1 btn-outline-primary' %>
  <% end %>
</div>
<div class="document-list">
  <%= render partial: 'document', collection: @documents.list %>
</div>
